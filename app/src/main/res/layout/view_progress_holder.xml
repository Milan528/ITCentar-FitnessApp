<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150sp"
    android:padding="8sp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    android:background="@drawable/rounded_layout_corners_background_gray">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       app:layout_constraintGuide_percent="0.80" />

    <TextView
        android:id="@+id/text_view_progress_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/this_weeks_progress"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_completed_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_25_completed_events"
        android:textColor="@color/darkGray"
        android:textSize="18sp"
        android:layout_marginTop="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_progress_title" />


</androidx.constraintlayout.widget.ConstraintLayout>